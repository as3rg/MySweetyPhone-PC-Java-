<?import javafx.scene.layout.FlowPane?>
<AnchorPane fx:id="MainPane" prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Login">
   <children>
      <AnchorPane prefHeight="100.0" prefWidth="1280.0" style="-fx-background-color: #202020; -fx-border-color: #ffffff; -fx-border-width: 0 0 1 0;">
         <children>
            <Label layoutX="826.0" layoutY="5.0" prefHeight="90.0" prefWidth="369.0" text="MySweetyPhone" textFill="WHITE" AnchorPane.leftAnchor="826.0">
               <font>
                  <Font name="Arial Black" size="39.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
            <ImageView fitHeight="100.0" fitWidth="97.0" layoutX="1183.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/Logo.png" />
               </image></ImageView>
         </children></AnchorPane>
      <TextField fx:id="Nick" layoutX="340.0" layoutY="194.0" prefHeight="80.0" prefWidth="600.0" promptText="Логин">
         <font>
            <Font size="22.0" />
         </font></TextField>
      <PasswordField fx:id="Pass" layoutX="340.0" layoutY="287.0" prefHeight="80.0" prefWidth="600.0" promptText="Пароль">
         <font>
            <Font size="22.0" />
         </font></PasswordField>
      <Button fx:id="RegButton" layoutX="401.0" layoutY="389.0" mnemonicParsing="false" onAction="#onReg" prefHeight="80.0" prefWidth="478.0" text="Зарегистрироваться">
         <font>
            <Font name="Arial Black" size="22.0" />
         </font>
      </Button>
      <Button fx:id="LoginButton" layoutX="461.0" layoutY="479.0" mnemonicParsing="false" onAction="#onLogin" prefHeight="80.0" prefWidth="359.0" text="Войти">
         <font>
            <Font name="Arial Black" size="22.0" />
         </font>
      </Button>
      <Label fx:id="Error" layoutX="340.0" layoutY="130.0" text="Label" textFill="RED" visible="false">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
